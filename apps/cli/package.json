{
    "name": "curex-cli",
    "version": "1.0.0",
    "description": "CLI application for CookieCurEx",
    "type": "module",
    "license": "MIT",
    "author": {
        "name": "PtCookie",
        "email": "ptcookie@outlook.com",
        "url": "https://blog.ptcookie.dev/"
    },
    "exports": "./dist/curex.js",
    "bin": {
        "curex": "dist/curex.js"
    },
    "scripts": {
        "build": "tsc -p tsconfig.build.json",
        "dev": "yarn node --loader ts-node/esm --no-warnings src/curex.ts",
        "test": "yarn node --experimental-vm-modules --no-warnings $(yarn bin jest)",
        "test:coverage": "yarn run test --coverage",
        "test:watch": "yarn run test --watchAll"
    },
    "dependencies": {
        "chalk": "^5.0.0",
        "commander": "^8.3.0",
        "date-fns": "^2.28.0",
        "exchange-api": "workspace:^1.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.16.7",
        "@babel/preset-env": "^7.16.8",
        "@babel/preset-typescript": "^7.16.7",
        "@types/jest": "^27.4.0",
        "@types/node": "^17.0.8",
        "babel-jest": "^27.4.6",
        "jest": "^27.4.7",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "jest": {
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "displayName": "CLI APP TEST",
        "extensionsToTreatAsEsm": [
            ".ts"
        ],
        "transform": {
            "^.+\\.[t|j]s$": "../../scripts/jest-transformer.js"
        },
        "moduleNameMapper": {
            "^(\\.{1,2}/.*)\\.js$": "$1"
        }
    }
}
